#!/bin/bash

# try terminal emulators in order
for termemu in xterm urxvt rxvt-unicode lxterminal ; do
	TERMEXEC=$(which "$termemu")
	if [ -n "$TERMEXEC" ] ; then
		exec "$TERMEXEC" "$@"
	fi
done

# no terminal emulator found in the list
echo "No acceptable terminal emulator found" > /dev/stderr
exit 127
